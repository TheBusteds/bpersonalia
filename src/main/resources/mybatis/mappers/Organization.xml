<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.bareng.hr.back.entity.Organization">
	<select id="findAll" resultType="Organization">
		SELECT * FROM tb_organization
	</select>
	<select id="findOne" parameterType="int" resultType="User">
		SELECT * FROM tb_organization o WHERE o.id
	</select>
	<select id="exists" parameterType="int" resultType="boolean">
		SELECT COUNT()
	</select>
	<insert id="save" parameterType="Organization">
		INSERT INTO tb_organization (name, remarks) VALUES (#{name}, #{remarks})
	</insert>
	
	<resultMap type="Organization" id="organization">
		<id column="id" property="id" />
		<association column="parent_id" property="parent" select="findOne">
			
		</association>
	</resultMap>
</mapper>